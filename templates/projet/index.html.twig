{% extends 'base.html.twig' %}

{% block title %}Index{% endblock %}

{% block body %}

<div class="example-wrapper mt-5 mb-5">
    <h1 class="display-1 text-center text-white mb-5" style="font-family: 'Dancing Script', cursive; font-size: 5rem;">Liste des Projets</h1>
    <div class="row d-flex justify-content-center align-items-center bg">
        {% for projet in projets %}
            <div class="cercle project col-md-4 mb-4 d-flex justify-content-center shadow-strong me-4 mt-4">
                <h5 class="mb-3">{{ projet.titre|raw }}</h5>
                <p class="mt-3 mb-3">{{ projet.accroche|raw }}</p>
                <a href="{{ path('app_show', { id: projet.id }) }}" class="btn btn-primary mb-3 mt-4">Voir le projet <i class="fa-solid fa-eye"></i></a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
